function closeTunnel() {

  echo "Closing tunnel..."

  pkill -f 'ssh.*-f'

  echo "Tunnel closed!"
}

function sshDemo() {

  echo "Now opening tunnel..."

  ssh -f -N demo-banking

  echo "Tunnel open!"
}

function demoDb() {

  echo "Requesting cert for demo access..."

  sshca request --environment 'demo' --reason 'demo database access' --valid-before '167h'

  echo " "

  sshDemo
}


